<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#40A14C</item>
        <item name="colorPrimaryDark">#27612E</item>
        <item name="colorAccent">#40A14C</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#40A14C</item>
        <item name="colorControlNormal">#2f3b37</item>
    </style>

    <style name="cardStyle" parent="CardView">
        <item name="cardBackgroundColor">#EFEBDF</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="PlayerNameText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#cc2f3b37</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ScoreText">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FaultNameText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#bb2f3b37</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TableHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TableText">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DeuceText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#EFEBDF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/deuce_rounded_corner</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TieBreakText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/tiebreak_rounded_corner</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NormalBtn">
        <item name="android:textColor">#EFEBDF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="RedBtn">
        <item name="colorButtonNormal">#eed60000</item>
        <item name="android:textColor">#EFEBDF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ResetBtn">
        <item name="colorButtonNormal">#2f3b37</item>
        <item name="android:textColor">#EFEBDF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <style name="TableHeaderXLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TableTextXLarge">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#2f3b37</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>